#include <stdio.h>
#include <stdlib.h>

int main()
{
    //declaração de variáveis inteiras:
    float num1, num2, num3;

    //atribuição de um valor inteiro:
    num1=10, num2=20, num3=30;

    printf("O valor das variaveis num sao : %.2f, %.2f e %.2f \n",num1, num2, num3);

    printf("\nDigite ate tres valores reais:\n");
    scanf("%f%f%f",&num1, &num2, &num3);

    printf("O novo valor das variaveis num eh : %.2f, %.2f e %.2f",num1, num2, num3);

    return 0;
}
