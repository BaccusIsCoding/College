#include <stdio.h>

int main()
{
    int num1, resto;
    printf("Digite um numero inteiro:\n");
    scanf("%d", &num1);
    
    resto = num1 % 2;
    
    if (resto==0)
    {
        printf("O numero eh par.");
    }
    else
    {
        printf("O numero eh impar.");
    }
    

    return 0;
}
